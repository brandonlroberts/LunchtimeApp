@model LunchApp.Models.ViewModels.RestaurantsViewModel

 
<form asp-controller="Home" asp-action="PickRandom" method="post" class="form=horizontal" role="form">
    <fieldset class="form-group">
        <h3>Just pick somewhere!</h3>

        <div class="container">           
            <table class="table table-bordered">
                <thead>
                @{
                    for (int i = 0; i < Model.Restaurants.Count(); i++)
                    {
                        <tr>

                            <th>@Html.DisplayFor(model => model.Restaurants[i].Name)</th>
                            <th>@Html.CheckBoxFor(model => model.Restaurants[i].IsSelected, new { @checked = true })</th>
                            <input asp-for="@Model.Restaurants[i].Name" type="hidden"/>
                            <input asp-for="@Model.Restaurants[i].Id" type="hidden"/>
                            <input asp-for="@Model.Restaurants[i].LastSelected" type="hidden"/>
                        </tr>
                    }
                }
                </thead>
            </table>
            <input id="Submit" type="submit" class="btn btn-success" value="Submit"/>

        </div>


    </fieldset>
</form> 